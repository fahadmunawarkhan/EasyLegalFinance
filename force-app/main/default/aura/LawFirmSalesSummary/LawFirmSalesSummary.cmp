    <aura:attribute name="typeOfLoanOptions" type="List" />
    <aura:attribute name="selectedTypeOfLoanFilter" type="list" />
    <!--|==============================|-->

    <aura:attribute name="design" type="Boolean" default="false" />
    <aura:attribute name="ChosenFilter" type="string" />
    <aura:attribute name="businessUnitOptions" type="List" />
    <aura:attribute name="selectedBusinessUnitFilter" type="List" />
    
    <aura:attribute name="ActivePFileTotal" type="integer" />
    <aura:attribute name="TotalNetAmount" type="decimal" />
    <aura:attribute name="totalPrincipalAdvanceOpen" type="decimal" default="0.00" />
    <aura:attribute name="totalPrincipalAdvanceClosed" type="decimal" default="0.00" />
    <aura:attribute name="totalPrincipalRepaid" type="decimal" default="0.00" />
    <aura:attribute name="totalROI" type="decimal" default="0.00" />

    <lightning:card title="Date Range" variant="base">
        <div class="slds-card__body_inner">
            <lightning:layout horizontalAlign="center">
                <lightning:layoutItem size="4">
                    <div class="slds-form-element slds-m-bottom_small slds-m-left_xx-large">
                        <div class="slds-form-element__control">
                            <span class="slds-form-element__static">
                                <div class="slds-media__body slds-m-left_xx-large slds-m-bottom_medium">
                                    <lightning:input label="Start Date" type="date" value="{!v.startDate}" 
                                                     min="{! v.calendarMin}" max="{! v.calendarMax}" />
                                </div>
                            </span>
                        </div>
                    </div>
                </lightning:layoutItem>
                <lightning:layoutItem size="4">
                    <div class="slds-form-element slds-m-bottom_small slds-m-left_xx-large">
                        <div class="slds-form-element__control">
                            <span class="slds-form-element__static">
                                <div class="slds-media__body slds-m-left_xx-large slds-m-bottom_medium">
                                    <lightning:input label="End Date" type="date" value="{!v.endDate}" 
                                                     min="{! v.calendarMin}" max="{! v.calendarMax}" />
                                </div>
                            </span>
                        </div>
                    </div>
                </lightning:layoutItem>
                <lightning:layoutItem size="2">
                    <div class="slds-form-element slds-m-bottom_small slds-m-left_xx-large slds-m-top_large">
                        <div class="slds-form-element__control">
                            <span class="slds-form-element__static">
                                <div class="slds-media__body slds-m-left_xx-large slds-m-bottom_medium">
                                    <lightning:button class="slds-theme_neutral" iconPosition="left" 
                                                      variant="neutral" type="button" label="Filter" onclick="{!c.filterButton}" />                    
                                </div>                                                    
                            </span>
                        </div>
                    </div>
                </lightning:layoutItem>
            </lightning:layout>
        </div>
    </lightning:card>
    <lightning:card title="Filter" variant="base">
        <div class="slds-card__body_inner">
            <lightning:layout horizontalAlign="center">
                <lightning:layoutItem size="4">
                    <div class="slds-form-element slds-m-bottom_small">
                        <div class="slds-form-element__control">
                            <span class="slds-form-element__static">
                                <div class="slds-media__body slds-m-left_xx-large slds-m-bottom_medium">                                                
                                    <lightning:input label="Search" value="{!v.searchByName}"  placeholder="Search by law firm name..."/>
                                </div>
                            </span>
                        </div>
                    </div>
                </lightning:layoutItem>

                <lightning:layoutItem size="2">
                    <div class="slds-form-element slds-m-bottom_small">
                        <div class="slds-form-element__control">
                            <span class="slds-form-element__static">
                                <div class="slds-media__body slds-m-left_xx-large slds-m-bottom_medium">                                                
                                    <c:MultiSelect aura:id="businessunitMS" showFilterInput="false" 
                                                showClearButton="false" showRefreshButton="false" 
                                                mslabel="Business Unit" msoptions="{!v.businessUnitOptions}"
                                                selectedOptions="{!v.selectedBusinessUnitFilter}"
                                                comboboxcontainer="false" />
                                </div>
                            </span>
                        </div>
                    </div>
                </lightning:layoutItem>

                <lightning:layoutItem size="2">
                    <div class="slds-form-element slds-m-bottom_small">
                        <div class="slds-form-element__control">
                            <span class="slds-form-element__static">
                                <div class="slds-media__body slds-m-left_xx-large slds-m-bottom_medium">                                                
                                    <c:MultiSelect aura:id="typeOfLoanMS" showFilterInput="false" 
                                                showClearButton="false" showRefreshButton="false" 
                                                mslabel="Type of Loan" msoptions="{!v.typeOfLoanOptions}"
                                                selectedOptions="{!v.selectedTypeOfLoanFilter}" />
                                </div>
                            </span>
                        </div>
                    </div>
                </lightning:layoutItem>

                <lightning:layoutItem size="2">
                    <div class="slds-form-element slds-m-bottom_small slds-m-left_xx-large slds-m-top_large">
                        <div class="slds-form-element__control">
                            <span class="slds-form-element__static">
                                <div class="slds-media__body slds-m-left_xx-large slds-m-bottom_medium">
                                    <lightning:button class="slds-theme_neutral" iconPosition="left" 
                                                      variant="neutral" type="button" label="Search" onclick="{!c.filterButton}" />                    
                                </div>                                                    
                            </span>
                        </div>
                    </div>
                </lightning:layoutItem>
            </lightning:layout>
        </div>
    </lightning:card>
    <lightning:card>
        <lightning:layout horizontalAlign="center">
            <lightning:layoutItem>
                <!--<lightning:buttonMenu aura:id="menu" onselect="{! c.handleViewAllButtonMenu }" label="View All (Excel)" alternativeText="View All">
                    <lightning:menuItem value="ViewAll" label="View All" />
                    <lightning:menuItem value="PayoutViewAll" label="View All (Payout)" />
                </lightning:buttonMenu>-->
                <lightning:button class="slds-theme_neutral" iconPosition="left" onclick="{!c.handleViewAllButtonMenu}" variant="neutral" type="button" label="View All (Excel)" />
            </lightning:layoutItem>
            <lightning:layoutItem>
                <!--<lightning:buttonMenu aura:id="menu" onselect="{! c.handleViewAllPDFButtonMenu }" label="View All (PDF)" alternativeText="View All (PDF)">
                    <lightning:menuItem value="ViewAll" label="View All" />
                    <lightning:menuItem value="PayoutViewAll" label="View All (Payout)" />
                </lightning:buttonMenu>-->
                <lightning:button class="slds-theme_neutral" iconPosition="left" onclick="{!c.handleViewAllPDFButtonMenu}" variant="neutral" type="button" label="View All (PDF)" />
            </lightning:layoutItem>
            <!-- <lightning:layoutItem >                
                
                <a href="{!'/apex/LawFirmSalesSummaryPayoutReportVF?StartDate=' + v.startDate + '&amp;EndDate=' + v.endDate + '&amp;BusinessUnit=' + v.selectedBusinessUnitFilter + ''}" target="_BLANK">
                    <lightning:button class="slds-theme_neutral" iconPosition="left" 
                                      variant="neutral" type="button" label="View All Payout (Excel)" />
                </a>
            </lightning:layoutItem>-->
            <lightning:layoutItem>
                <lightning:button class="slds-theme_neutral" iconPosition="left" onclick="{!c.printPDFReportButton}" variant="neutral" type="button" label="Print Report (PDF)" />
                <!--<a href="{!v.PrintAllUrl+'%26'+'DefaultPDF=1'}" target="_BLANK">
                    <lightning:button class="slds-theme_neutral" iconPosition="left" variant="neutral" type="button" label="Print Report (PDF)" />
                </a>-->
            </lightning:layoutItem>
        </lightning:layout>
    </lightning:card>
    <lightning:card class="slds-card slds-card_boundary">
        <div class="slds-grid slds-gutters">
            <div class="slds-col slds-size_9-of-12">
                <span style="font-style:italic;font-size:smaller">
                    <span style="color:red;margin-left:10px;"> Note</span>: This Table Shows Only "eTransfer", "Cheque" and "Admin Fee" Drawdowns Falling under Selected Date Range and opportunities being "Closed With Loan". <br/>
                <span style="margin-left:40px;"># Of Files are number of opportunities that a specific law firms has given in the selected date range.</span>
                </span>
                <br/>
                <br/>
                <a href="/lightning/r/Report/00O0L000003mqhhUAA/view" target="_BLANK">
                    <lightning:button class="slds-theme_neutral" iconPosition="left" variant="brand" type="button" label="Reference Report" />
                </a>
            </div>
        </div>
        <div class="table-container" style="height: 528px !important;">
            <lightning:card title="Law Firm Financial Summary" iconName="standard:case" variant="base">
                <div class="tableFixHead ">
                    <table class="slds-table slds-table_bordered slds-table_cell-buffer slds-table_col-bordered">
                        <thead>
                            <tr class="slds-text-title_caps table-tr" style="font-size:10px; font-weight:bold;">
                                <th scope="col">
                                    <div class="slds-truncate slds-text-align_center">LAW FIRM</div>
                                </th>
                                <th scope="col">
                                    <div class="slds-truncate slds-text-align_center">Total Accounts<br/>(open and closed)</div>
                                </th>
                                <th scope="col">
                                    <div class="slds-truncate slds-text-align_center"># OF<br/>ACTIVE<br/>ACCOUNTS</div>
                                </th>
                                <th scope="col">
                                    <div class="slds-truncate slds-text-align_center"># OF<br/>CLOSED<br/>ACCOUNTS</div>
                                </th>
                                <th scope="col">
                                    <div class="slds-truncate slds-text-align_center"># OF<br/>BAD DEBT<br/>ACCOUNTS</div>
                                </th>
                                <th scope="col">
                                    <div class="slds-truncate slds-text-align_center"># OF<br/>SHORTFALL<br/>ACCOUNTS</div>
                                </th>
                                <th scope="col">
                                    <div class="slds-truncate slds-text-align_center"># OF<br/>SURPLUS<br/>ACCOUNTS</div>
                                </th>
                                <th scope="col">
                                    <div class="slds-truncate slds-text-align_center"># OF OPP<br/>(Open + Closed)</div>
                                </th>
                                <th scope="col">
                                    <div class="slds-truncate slds-text-align_center">Principal Advanced<br/>(Open)</div>
                                </th>                               
                                <th scope="col">
                                    <div class="slds-truncate slds-text-align_center">Principal Advanced<br/>(closed)</div>
                                </th>
                                <th scope="col">
                                    <div class="slds-truncate slds-text-align_center">Principal Repaid<br/>(closed)</div>
                                </th>
                                <th scope="col">
                                    <div class="slds-truncate slds-text-align_center">Principal +<br/>Admin Fee +<br/>Interest Received<br/>(cash paid)</div>
                                </th>
                                <th scope="col">
                                    <div class="slds-truncate slds-text-align_center">Interest Recovered</div>
                                </th>
                                <th scope="col">
                                    <div class="slds-truncate slds-text-align_center">Admin Fee<br/>Recovered</div>
                                </th>                                
                                <th scope="col">
                                    <div class="slds-truncate slds-text-align_center">Surplus</div>
                                </th>
                                <th scope="col">
                                    <div class="slds-truncate slds-text-align_center">Shortfall</div>
                                </th>
                                <th scope="col">
                                    <div class="slds-truncate slds-text-align_center">Bad Debt</div>
                                </th>
                                <th scope="col">
                                    <div class="slds-truncate slds-text-align_center">Net ($)</div>
                                </th>
                                <th scope="col">
                                    <div class="slds-truncate slds-text-align_center">ROI (%)</div>
                                </th>
                            </tr>
                        </thead>
                    <tbody style="font-size: 11px;">
                        <aura:iteration items="{!v.AmountByLawFirm}" var="item">

                            <tr>
                                <th class="">
                                    <div class=" ">
                                        <aura:if isTrue="{!item.firm == null}">
                                            <aura:set attribute="else">
                                                <a href="{!'/'+item.firmId}">{!item.firm}</a>
                                            </aura:set>
                                        </aura:if>
                                    </div>
                                </th>
                                <td class="slds-cell-wrap slds-text-align_right">
                                    <lightning:formattedNumber value="{!item.totalFileCount}" style="decimal" maximumFractionDigits="0" />
                                </td>
                                <td class="slds-cell-wrap slds-text-align_right">
                                    <lightning:formattedNumber value="{!item.totalActiveFileCount}" style="decimal" maximumFractionDigits="0" />
                                </td>
                                <td class="slds-cell-wrap slds-text-align_right">
                                    <lightning:formattedNumber value="{!item.totalClosedFileCount}" style="decimal" maximumFractionDigits="0" />
                                </td>
                                <td class="slds-cell-wrap slds-text-align_right">
                                    <lightning:formattedNumber value="{!item.totalbdfile}" style="decimal" maximumFractionDigits="0" />
                                </td>
                                <td class="slds-cell-wrap slds-text-align_right">
                                    <lightning:formattedNumber value="{!item.totalShortFallFile}" style="decimal" maximumFractionDigits="0" />
                                </td>
                                <td class="slds-cell-wrap slds-text-align_right">
                                    <lightning:formattedNumber value="{!item.totalOverAgeFile}" style="decimal" maximumFractionDigits="0" />
                                </td>
                                <td class="slds-cell-wrap slds-text-align_right">
                                    <lightning:formattedNumber value="{!item.totalOpptyCount}" style="decimal" maximumFractionDigits="0" />
                                </td>
                                <td class="slds-cell-wrap slds-text-align_right">
                                    <div class="">
                                        <aura:if isTrue="{!item.PrincipalAdvancedOpen == null}">
                                            $0.00
                                            <aura:set attribute="else">
                                                <lightning:formattedNumber value="{!item.PrincipalAdvancedOpen}" style="currency" maximumFractionDigits="2" />
                                            </aura:set>
                                        </aura:if>
                                    </div>
                                </td>
                                <td class="slds-cell-wrap slds-text-align_right">
                                    <div class="">
                                        <aura:if isTrue="{!item.PrincipalAdvancedClosed == null}">
                                            $0.00
                                            <aura:set attribute="else">
                                                <lightning:formattedNumber value="{!item.PrincipalAdvancedClosed}" style="currency" maximumFractionDigits="2" />
                                            </aura:set>
                                        </aura:if>
                                    </div>
                                </td>
                                <td class="slds-cell-wrap slds-text-align_right">
                                    <div class="">
                                        <aura:if isTrue="{!item.PrincipalRepaid == null}">
                                            $0.00
                                            <aura:set attribute="else">
                                                <lightning:formattedNumber value="{!item.PrincipalRepaid}" style="currency" maximumFractionDigits="2" />
                                            </aura:set>
                                        </aura:if>
                                    </div>
                                </td>
                                <td class="slds-cell-wrap slds-text-align_right">
                                    <div class="">
                                        <aura:if isTrue="{!item.totalClosedAmount == null}">
                                            $0.00
                                            <aura:set attribute="else">
                                                <lightning:formattedNumber value="{!item.totalClosedAmount}" style="currency" maximumFractionDigits="2" />
                                            </aura:set>
                                        </aura:if>
                                    </div>
                                </td>
                                <td class="slds-cell-wrap slds-text-align_right">
                                    <div class="">
                                        <aura:if isTrue="{!item.totalInterestRepaid == null}">
                                            $0.00
                                            <aura:set attribute="else">
                                                <lightning:formattedNumber value="{!item.totalInterestRepaid}" style="currency" maximumFractionDigits="2" />
                                            </aura:set>
                                        </aura:if>
                                    </div>
                                </td>
                                <td class="slds-cell-wrap slds-text-align_right">
                                    <div class="">
                                        <aura:if isTrue="{!item.totalAdminFeeReceived == null}">
                                            $0.00
                                            <aura:set attribute="else">
                                                <lightning:formattedNumber value="{!item.totalAdminFeeReceived}" style="currency" maximumFractionDigits="2" />
                                            </aura:set>
                                        </aura:if>
                                    </div>
                                </td>
                                <td class="slds-cell-wrap slds-text-align_right">
                                    <div class="">
                                        <aura:if isTrue="{!item.totalOverAgeAmt == null}">
                                            $0.00
                                            <aura:set attribute="else">
                                                <lightning:formattedNumber value="{!item.totalOverAgeAmt}" style="currency" maximumFractionDigits="2" />
                                            </aura:set>
                                        </aura:if>
                                    </div>
                                </td>
                                <td class="slds-cell-wrap slds-text-align_right">
                                    <div class="">
                                        <aura:if isTrue="{!item.totalShortFallAmt == null}">
                                            $0.00
                                            <aura:set attribute="else">
                                                <lightning:formattedNumber value="{!item.totalShortFallAmt}" style="currency" maximumFractionDigits="2" />
                                            </aura:set>
                                        </aura:if>
                                    </div>
                                </td>
                                <td class="slds-cell-wrap slds-text-align_right">
                                    <div class="">
                                        <aura:if isTrue="{!item.totalbdamount == null}">
                                            $0.00
                                            <aura:set attribute="else">
                                                <lightning:formattedNumber value="{!item.totalbdamount}" style="currency" maximumFractionDigits="2" />
                                            </aura:set>
                                        </aura:if>
                                    </div>
                                </td>
                                <td class="slds-cell-wrap slds-text-align_right">
                                    <div class="">
                                        <aura:if isTrue="{!item.NetAmount == null}">
                                            $0.00
                                            <aura:set attribute="else">
                                                <lightning:formattedNumber value="{!item.NetAmount}" style="currency" maximumFractionDigits="2" />
                                            </aura:set>
                                        </aura:if>
                                    </div>
                                </td>
                                <td class="slds-cell-wrap slds-text-align_right">
                                    <div class="">
                                        <aura:if isTrue="{!item.ROI == null}">
                                            $0.00
                                            <aura:set attribute="else">
                                                <lightning:formattedNumber value="{!item.ROI}" style="percent" maximumFractionDigits="2" />
                                            </aura:set>
                                        </aura:if>
                                    </div>
                                </td>
                            </tr>                            
                        </aura:iteration>
                        <!-- This section will be outside of the iteration above -->
                        <tr class="slds-hint-parent">
                            <td class="slds-cell-wrap" data-label="TOTAL">
                                <div class="slds-truncate makeBold" title="TOTAL:">TOTAL:</div>
                            </td>

                            <td class="slds-cell-wrap slds-text-align_right" data-label="File Grand Total">
                                <div class="slds-truncate makeBoldBlue" title="File Grand Total">
                                    <aura:if isTrue="{!v.fileTotal == null}">
                                        0
                                        <aura:set attribute="else">
                                            <lightning:formattedNumber value="{!v.fileTotal}" style="decimal" maximumFractionDigits="0" />
                                        </aura:set>
                                    </aura:if>

                                </div>
                            </td>
                            <td class="slds-cell-wrap slds-text-align_right" data-label="File Grand Total">
                                <div class="slds-truncate makeBoldBlue" title="File Grand Total">
                                    <aura:if isTrue="{!v.ActiveFileTotal == null}">
                                        0
                                        <aura:set attribute="else">
                                            <lightning:formattedNumber value="{!v.ActiveFileTotal}" style="decimal" maximumFractionDigits="0" />
                                        </aura:set>
                                    </aura:if>

                                </div>
                            </td>
                            <td class="slds-cell-wrap slds-text-align_right" data-label="File Grand Total">
                                <div class="slds-truncate makeBoldBlue" title="File Grand Total">
                                    <aura:if isTrue="{!v.closedFileTotal == null}">
                                        0
                                        <aura:set attribute="else">
                                            <lightning:formattedNumber value="{!v.closedFileTotal}" style="decimal" maximumFractionDigits="0" />
                                        </aura:set>
                                    </aura:if>

                                </div>
                            </td>
                            <td class="slds-cell-wrap slds-text-align_right" data-label="File Grand Total">
                                <div class="slds-truncate makeBoldBlue" title="File Grand Total">
                                    <aura:if isTrue="{!v.NoBadDebtTotal == null}">
                                        0
                                        <aura:set attribute="else">
                                            <lightning:formattedNumber value="{!v.NoBadDebtTotal}" style="decimal" maximumFractionDigits="0" />
                                        </aura:set>
                                    </aura:if>

                                </div>
                            </td>
