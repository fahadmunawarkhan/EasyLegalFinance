<aura:component implements="flexipage:availableForAllPageTypes,force:appHostable,force:lightningQuickAction" access="global" controller="LawFirmSalesSummaryComponentCtrl">

    <aura:handler name="init" value="{!this}" action="{!c.doInit}" />
    <aura:attribute name="calendarMin" type="date" />
    <aura:attribute name="calendarMax" type="date" />
    <aura:attribute name="startDate" type="date" />
    <aura:attribute name="endDate" type="date" />
    <aura:attribute name="amtTotal" type="decimal" />
    <aura:attribute name="closedAmtTotal" type="decimal" />
    <aura:attribute name="fileTotal" type="integer" />
    <aura:attribute name="closedFileTotal" type="integer" />
    <aura:attribute name="opptyTotal" type="integer" />
    <aura:attribute name="NoBadDebtTotal" type="integer" />
    <aura:attribute name="BadDebtAmtTotal" type="decimal" />
    <aura:attribute name="ShortFallFileTotal" type="integer" />
    <aura:attribute name="ShortFallAmtTotal" type="decimal" />
    <aura:attribute name="OverAgeFileTotal" type="integer" />`
    <aura:attribute name="OverAgeAmtTotal" type="decimal" />

    <aura:attribute name="RhinoamtTotal" type="decimal" />
    <aura:attribute name="RhinoClosedAmtTotal" type="decimal" />
    <aura:attribute name="RhinofileTotal" type="integer" />
    <aura:attribute name="RhinoClosedFileTotal" type="integer" />
    <aura:attribute name="RhinoOpptyTotal" type="integer" />
    <aura:attribute name="RhinoNoBadDebtTotal" type="integer" />
    <aura:attribute name="RhinoBadDebtAmtTotal" type="decimal" />
    <aura:attribute name="RhinoShortFallFileTotal" type="integer" />
    <aura:attribute name="RhinoShortFallAmtTotal" type="decimal" />
    <aura:attribute name="RhinoOverAgeFileTotal" type="integer" />
    <aura:attribute name="RhinoOverAgeAmtTotal" type="decimal" />

    <aura:attribute name="ElfiamtTotal" type="decimal" />
    <aura:attribute name="ElfiClosedAmtTotal" type="decimal" />
    <aura:attribute name="ElfifileTotal" type="integer" />
    <aura:attribute name="ElfiClosedFileTotal" type="integer" />
    <aura:attribute name="ElfiOpptyTotal" type="integer" />
    <aura:attribute name="ElfiNoBadDebtTotal" type="integer" />
    <aura:attribute name="ElfiBadDebtAmtTotal" type="decimal" />
    <aura:attribute name="ElfiShortFallFileTotal" type="integer" />
    <aura:attribute name="ElfiShortFallAmtTotal" type="decimal" />
    <aura:attribute name="ElfiOverAgeFileTotal" type="integer" />
    <aura:attribute name="ElfiOverAgeAmtTotal" type="decimal" />

    <aura:attribute name="AmountByLawFirm" type="AggregateResult[]" />
    <aura:attribute name="spinner" type="Boolean" />
    <aura:attribute name="customSetting" type="Object" />
    <aura:attribute name="ViewAllUrl" type="String" />
    <aura:attribute name="PrintAllUrl" type="String" />
    <aura:attribute name="sortField" type="String" default="Amount" />
    <aura:attribute name="sortOrder" type="String" default="DESC" />
    <aura:attribute name="showWarning" type="Boolean" default="false" />
    <aura:attribute name="searchByName" type="String" default="" />

    <!--Funding Dashboard (Type of Loan)-->
    <aura:attribute name="typeOfLoanOptions" type="List" />
    <aura:attribute name="selectedTypeOfLoanFilter" type="String" default="Facility Loan" />
    <!--|==============================|-->

    <aura:attribute name="design" type="Boolean" default="false" />
    <aura:attribute name="ChosenFilter" type="string" />
    <aura:attribute name="businessUnitOptions" type="List" />
    <aura:attribute name="selectedBusinessUnitFilter" type="String" default="{!v.customSetting.Business_Unit__c}" />

    <lightning:card title="Date Range" variant="base">
        <div class="slds-card__body_inner">
            <lightning:layout horizontalAlign="center">
                <lightning:layoutItem size="4">
                    <div class="slds-form-element slds-m-bottom_small slds-m-left_xx-large">
                        <div class="slds-form-element__control">
                            <span class="slds-form-element__static">
                                <div class="slds-media__body slds-m-left_xx-large slds-m-bottom_medium">
                                    <lightning:input label="Start Date" type="date" value="{!v.startDate}" 
                                                     min="{! v.calendarMin}" max="{! v.calendarMax}" />
                                </div>
                            </span>
                        </div>
                    </div>
                </lightning:layoutItem>
                <lightning:layoutItem size="4">
                    <div class="slds-form-element slds-m-bottom_small slds-m-left_xx-large">
                        <div class="slds-form-element__control">
                            <span class="slds-form-element__static">
                                <div class="slds-media__body slds-m-left_xx-large slds-m-bottom_medium">
                                    <lightning:input label="End Date" type="date" value="{!v.endDate}" 
                                                     min="{! v.calendarMin}" max="{! v.calendarMax}" />
                                </div>
                            </span>
                        </div>
                    </div>
                </lightning:layoutItem>
                <lightning:layoutItem size="2">
                    <div class="slds-form-element slds-m-bottom_small slds-m-left_xx-large slds-m-top_large">
                        <div class="slds-form-element__control">
                            <span class="slds-form-element__static">
                                <div class="slds-media__body slds-m-left_xx-large slds-m-bottom_medium">
                                    <lightning:button class="slds-theme_neutral" iconPosition="left" 
                                                      variant="neutral" type="button" label="Filter" onclick="{!c.filterButton}" />                    
                                </div>                                                    
                            </span>
                        </div>
                    </div>
                </lightning:layoutItem>
            </lightning:layout>
        </div>
    </lightning:card>
    <lightning:card title="Filter" variant="base">
        <div class="slds-card__body_inner">
            <lightning:layout horizontalAlign="center">
                <lightning:layoutItem size="4">
                    <div class="slds-form-element slds-m-bottom_small">
                        <div class="slds-form-element__control">
                            <span class="slds-form-element__static">
                                <div class="slds-media__body slds-m-left_xx-large slds-m-bottom_medium">                                                
                                    <lightning:input label="Search" value="{!v.searchByName}"  placeholder="Search by law firm name..."/>
                                </div>
                            </span>
                        </div>
                    </div>
                </lightning:layoutItem>

                <lightning:layoutItem size="2">
                    <div class="slds-form-element slds-m-bottom_small">
                        <div class="slds-form-element__control">
                            <span class="slds-form-element__static">
                                <div class="slds-media__body slds-m-left_xx-large slds-m-bottom_medium">                                                
                                    <lightning:combobox aura:id="businessUnitFilter" label="Business Unit" value="{!v.selectedBusinessUnitFilter}" placeholder="Business Unit" options="{! v.businessUnitOptions }"/>
                                </div>
                            </span>
                        </div>
                    </div>
                </lightning:layoutItem>

                <lightning:layoutItem size="2">
                    <div class="slds-form-element slds-m-bottom_small">
                        <div class="slds-form-element__control">
                            <span class="slds-form-element__static">
                                <div class="slds-media__body slds-m-left_xx-large slds-m-bottom_medium">                                                
                                    <lightning:combobox aura:id="typeofLoan" label="Type of Loan" value="{!v.selectedTypeOfLoanFilter}" placeholder="Type of Loan" options="{! v.typeOfLoanOptions }"/>
                                </div>
                            </span>
                        </div>
                    </div>
                </lightning:layoutItem>

                <lightning:layoutItem size="2">
                    <div class="slds-form-element slds-m-bottom_small slds-m-left_xx-large slds-m-top_large">
                        <div class="slds-form-element__control">
                            <span class="slds-form-element__static">
                                <div class="slds-media__body slds-m-left_xx-large slds-m-bottom_medium">
                                    <lightning:button class="slds-theme_neutral" iconPosition="left" 
                                                      variant="neutral" type="button" label="Search" onclick="{!c.filterButton}" />                    
                                </div>                                                    
                            </span>
                        </div>
                    </div>
                </lightning:layoutItem>
            </lightning:layout>
        </div>
    </lightning:card>
    <lightning:card>
        <lightning:layout horizontalAlign="center">
            <lightning:layoutItem>
                <!--<lightning:buttonMenu aura:id="menu" onselect="{! c.handleViewAllButtonMenu }" label="View All (Excel)" alternativeText="View All">
                    <lightning:menuItem value="ViewAll" label="View All" />
                    <lightning:menuItem value="PayoutViewAll" label="View All (Payout)" />
                </lightning:buttonMenu>-->
                <lightning:button class="slds-theme_neutral" iconPosition="left" onclick="{!c.handleViewAllButtonMenu}" variant="neutral" type="button" label="View All (Excel)" />
            </lightning:layoutItem>
            <lightning:layoutItem>
                <!--<lightning:buttonMenu aura:id="menu" onselect="{! c.handleViewAllPDFButtonMenu }" label="View All (PDF)" alternativeText="View All (PDF)">
                    <lightning:menuItem value="ViewAll" label="View All" />
                    <lightning:menuItem value="PayoutViewAll" label="View All (Payout)" />
                </lightning:buttonMenu>-->
                <lightning:button class="slds-theme_neutral" iconPosition="left" onclick="{!c.handleViewAllPDFButtonMenu}" variant="neutral" type="button" label="View All (PDF)" />
            </lightning:layoutItem>
            <!-- <lightning:layoutItem >                
                
                <a href="{!'/apex/LawFirmSalesSummaryPayoutReportVF?StartDate=' + v.startDate + '&amp;EndDate=' + v.endDate + '&amp;BusinessUnit=' + v.selectedBusinessUnitFilter + ''}" target="_BLANK">
                    <lightning:button class="slds-theme_neutral" iconPosition="left" 
                                      variant="neutral" type="button" label="View All Payout (Excel)" />
                </a>
            </lightning:layoutItem>-->
            <lightning:layoutItem>
                <lightning:button class="slds-theme_neutral" iconPosition="left" onclick="{!c.printPDFReportButton}" variant="neutral" type="button" label="Print Report (PDF)" />
                <!--<a href="{!v.PrintAllUrl+'%26'+'DefaultPDF=1'}" target="_BLANK">
                    <lightning:button class="slds-theme_neutral" iconPosition="left" variant="neutral" type="button" label="Print Report (PDF)" />
                </a>-->
            </lightning:layoutItem>
        </lightning:layout>
    </lightning:card>
    <lightning:card class="slds-card slds-card_boundary">
        <div class="slds-grid slds-gutters">
            <div class="slds-col slds-size_9-of-12">
                <span style="font-style:italic;font-size:smaller">
                    <span style="color:red;margin-left:10px;"> Note</span>: This Table Shows Only "eTransfer", "Cheque" and "Admin Fee" Drawdowns Falling under Selected Date Range and opportunities being "Closed With Loan". <br/>
                <span style="margin-left:40px;"># Of Files are number of opportunities that a specific law firms has given in the selected date range.</span>
                </span>
                <br/>
                <br/>
                <a href="/lightning/r/Report/00O0L000003mqhhUAA/view" target="_BLANK">
                    <lightning:button class="slds-theme_neutral" iconPosition="left" variant="brand" type="button" label="Reference Report" />
                </a>
            </div>
        </div>
        <div class="table-container" style="overflow: scroll !important; height: 450px !important;">
            <lightning:card title="Law Firm Financial Summary" iconName="standard:case" variant="base">
                <table class="slds-table slds-table_bordered slds-table_striped slds-table_col-bordered">
                    <thead>

                        <tr class="slds-line-height_reset">
                            <th onclick="{!c.sort}" class="slds-is-sortable slds-is-resizable slds-is-sorted" data-field="Firm" style="cursor: pointer;">
                                <span class="slds-truncate makeBold slds-m-right_xxx-small" title="Law Firm">LAW FIRM</span>
                                <aura:if isTrue="{!and(v.sortOrder=='DESC',v.sortField=='Firm')}">
                                    <lightning:icon iconName="utility:arrowdown" size="xx-small" />
                                </aura:if>
                                <aura:if isTrue="{!and(v.sortOrder=='ASC',v.sortField=='Firm')}">
                                    <lightning:icon iconName="utility:arrowup" size="xx-small" />
                                </aura:if>
                                <!--
                                <aura:if isTrue="{!and(not(and(v.sortOrder=='DESC',v.sortField=='Firm')), not(and(v.sortOrder=='ASC',v.sortField=='Firm')))}">
                                    <lightning:icon iconName="utility:arrowup" size="xx-small"/>
                                </aura:if>-->
                            </th>
                            <th onclick="{!c.sort}" class="slds-is-sortable slds-is-resizable slds-is-sorted" data-field="Files" style="cursor: pointer;">
                                <span class="slds-truncate makeBold slds-m-right_xxx-small" title="# OF FILES"># OF FILES</span>
                                <aura:if isTrue="{!and(v.sortOrder=='DESC',v.sortField=='Files')}">
                                    <lightning:icon iconName="utility:arrowdown" size="xx-small" />
                                </aura:if>
                                <aura:if isTrue="{!and(v.sortOrder=='ASC',v.sortField=='Files')}">
                                    <lightning:icon iconName="utility:arrowup" size="xx-small" />
                                </aura:if>
                                <!--
                                <aura:if isTrue="{!and(not(and(v.sortOrder=='DESC',v.sortField=='Files')), not(and(v.sortOrder=='ASC',v.sortField=='Files')))}">
                                    <lightning:icon iconName="utility:arrowup" size="xx-small"/>
                                </aura:if>-->
                            </th>
                            <th>
                                <span class="slds-truncate makeBold slds-m-right_xxx-small" title="# OF CLOSED FILES"># OF CLOSED FILES</span>
                            </th>
                            <th onclick="{!c.sort}" class="slds-is-sortable slds-is-resizable slds-is-sorted" data-field="opptyCount" style="cursor: pointer;">
                                <span class="slds-truncate makeBold slds-m-right_xxx-small" title="# OF Opps"># OF TOTAL Opps</span>
                                <aura:if isTrue="{!and(v.sortOrder=='DESC',v.sortField=='opptyCount')}">
                                    <lightning:icon iconName="utility:arrowdown" size="xx-small" />
                                </aura:if>
                                <aura:if isTrue="{!and(v.sortOrder=='ASC',v.sortField=='opptyCount')}">
                                    <lightning:icon iconName="utility:arrowup" size="xx-small" />
                                </aura:if>
                            </th>
                            <th>
                                <span class="slds-truncate makeBold slds-m-right_xxx-small" title="CLOSED AMOUNT">PAYOUT</span>
                            </th>
                            <th onclick="{!c.sort}" class="slds-is-sortable slds-is-resizable slds-is-sorted" data-field="Amount" style="cursor: pointer;">
                                <span class="slds-truncate makeBold slds-m-right_xxx-small" title="Amount">AMOUNT</span>
                                <aura:if isTrue="{!and(v.sortOrder=='DESC',v.sortField=='Amount')}">
                                    <lightning:icon iconName="utility:arrowdown" size="xx-small" />
                                </aura:if>
                                <aura:if isTrue="{!and(v.sortOrder=='ASC',v.sortField=='Amount')}">
                                    <lightning:icon iconName="utility:arrowup" size="xx-small" />
                                </aura:if>
                                <!--
                                <aura:if isTrue="{!and(not(and(v.sortOrder=='DESC',v.sortField=='Amount')), not(and(v.sortOrder=='ASC',v.sortField=='Amount')))}">
                                    <lightning:icon iconName="utility:arrowup" size="xx-small"/>
                                </aura:if>-->
                            </th>
                            <th>
                                <span class="slds-truncate makeBold slds-m-right_xxx-small" title="# OF BAD DEBT FILES"># OF BAD DEBT FILES</span>
                            </th>
                            <th>
                                <span class="slds-truncate makeBold slds-m-right_xxx-small" title="BAD DEBT AMOUNT">
                                            BAD DEBT AMOUNT
                                        </span>
                            </th>
                            <th>
                                <span class="slds-truncate makeBold slds-m-right_xxx-small" title="# OF SHORTFALL FILES">
                                            # OF SHORTFALL FILES
                                        </span>
                            </th>
                            <th>
                                <span class="slds-truncate makeBold slds-m-right_xxx-small" title="SHORTFALL AMOUNT">
                                            SHORTFALL AMOUNT
                                        </span>
                            </th>
                            <th>
                                <span class="slds-truncate makeBold slds-m-right_xxx-small" title="# OF OVERAGE FILES">
                                            # OF OVERAGE FILES
                                        </span>
                            </th>
                            <th>
                                <span class="slds-truncate makeBold slds-m-right_xxx-small" title="OVERAGE AMOUNT">
                                            OVERAGE AMOUNT
                                        </span>
                            </th>
                        </tr>

                    </thead>
                    <tbody>

                        <aura:iteration items="{!v.AmountByLawFirm}" var="item">

                            <tr class="slds-hint-parent">
                                <td class="">
                                    <div class="slds-truncate ">
                                        <aura:if isTrue="{!item.firm == null}">
                                            <aura:set attribute="else">
                                                <a href="{!'/'+item.firmId}">{!item.firm}</a>
                                            </aura:set>
                                        </aura:if>
                                    </div>
                                </td>
                                <td class="">
                                    <div class="slds-truncate">
                                        <aura:if isTrue="{!item.totalFileCount == null}">
                                            0
                                            <aura:set attribute="else">
                                                <lightning:formattedNumber value="{!item.totalFileCount}" style="decimal" maximumFractionDigits="0" />
                                            </aura:set>
                                        </aura:if>
                                    </div>
                                </td>
                                <td class="">
                                    <div class="slds-truncate">
                                        <aura:if isTrue="{!item.totalClosedFileCount == null}">
                                            0
                                            <aura:set attribute="else">
                                                <lightning:formattedNumber value="{!item.totalClosedFileCount}" style="decimal" maximumFractionDigits="0" />
                                            </aura:set>
                                        </aura:if>
                                    </div>
                                </td>
                                <td class="">
                                    <div class="slds-truncate">
                                        <aura:if isTrue="{!item.totalOpptyCount == null}">
                                            0
                                            <aura:set attribute="else">
                                                <lightning:formattedNumber value="{!item.totalOpptyCount}" style="decimal" maximumFractionDigits="0" />
                                            </aura:set>
                                        </aura:if>
                                    </div>
                                </td>
                                <td class="">
                                    <div class="slds-truncate">
                                        <aura:if isTrue="{!item.totalClosedAmount == null}">
                                            $0.00
                                            <aura:set attribute="else">
                                                <lightning:formattedNumber value="{!item.totalClosedAmount}" style="currency" maximumFractionDigits="2" />
                                            </aura:set>
                                        </aura:if>
                                    </div>
                                </td>
                                <td class="">
                                    <div class="slds-truncate">
                                        <aura:if isTrue="{!item.totalAmount == null}">
                                            $0.00
                                            <aura:set attribute="else">
                                                <lightning:formattedNumber value="{!item.totalAmount}" style="currency" maximumFractionDigits="2" />
                                            </aura:set>
                                        </aura:if>
                                    </div>
                                </td>
                                <td>
                                    <div class="slds-truncate">
                                        <aura:if isTrue="{!item.totalbdfile == null}">
                                            0
                                            <aura:set attribute="else">
                                                <lightning:formattedNumber value="{!item.totalbdfile}" style="decimal" maximumFractionDigits="0" />
                                            </aura:set>
                                        </aura:if>
                                    </div>
                                </td>
                                <td>
                                    <div class="slds-truncate">
                                        <aura:if isTrue="{!item.totalbdamount == null}">
                                            $0.00
                                            <aura:set attribute="else">
                                                <lightning:formattedNumber value="{!item.totalbdamount}" style="currency" maximumFractionDigits="2" />
                                            </aura:set>
                                        </aura:if>
                                    </div>
                                </td>
                                <td>
                                    <div class="slds-truncate">
                                        <aura:if isTrue="{!item.totalShortFallFile == null}">
                                            0
                                            <aura:set attribute="else">
                                                <lightning:formattedNumber value="{!item.totalShortFallFile}" style="decimal" maximumFractionDigits="0" />
                                            </aura:set>
                                        </aura:if>
                                    </div>
                                </td>
                                <td>
                                    <div class="slds-truncate">
                                        <aura:if isTrue="{!item.totalShortFallAmt == null}">
                                            $0.00
                                            <aura:set attribute="else">
                                                <lightning:formattedNumber value="{!item.totalShortFallAmt}" style="currency" maximumFractionDigits="2" />
                                            </aura:set>
                                        </aura:if>
                                    </div>
                                </td>
                                <td>
                                    <div class="slds-truncate">
                                        <aura:if isTrue="{!item.totalOverAgeFile == null}">
                                            0
                                            <aura:set attribute="else">
                                                <lightning:formattedNumber value="{!item.totalOverAgeFile}" style="decimal" maximumFractionDigits="0" />
                                            </aura:set>
                                        </aura:if>
                                    </div>
                                </td>
                                <td>
                                    <div class="slds-truncate">
                                        <aura:if isTrue="{!item.totalOverAgeAmt == null}">
                                            $0.00
                                            <aura:set attribute="else">
                                                <lightning:formattedNumber value="{!item.totalOverAgeAmt}" style="currency" maximumFractionDigits="2" />
                                            </aura:set>
                                        </aura:if>
                                    </div>
                                </td>
                            </tr>

                        </aura:iteration>
                        <!-- This section will be outside of the iteration above -->
                        <tr class="slds-hint-parent">

                            <td data-label="TOTAL">
                                <div class="slds-truncate makeBold" title="TOTAL:">TOTAL:</div>
                            </td>

                            <td data-label="File Grand Total">
                                <div class="slds-truncate makeBoldBlue" title="File Grand Total">
                                    <aura:if isTrue="{!v.fileTotal == null}">
                                        0
                                        <aura:set attribute="else">
                                            <lightning:formattedNumber value="{!v.fileTotal}" style="decimal" maximumFractionDigits="0" />
                                        </aura:set>
                                    </aura:if>

                                </div>
                            </td>
                            <td data-label="File Grand Total">
                                <div class="slds-truncate makeBoldBlue" title="File Grand Total">
                                    <aura:if isTrue="{!v.closedFileTotal == null}">
                                        0
                                        <aura:set attribute="else">
                                            <lightning:formattedNumber value="{!v.closedFileTotal}" style="decimal" maximumFractionDigits="0" />
                                        </aura:set>
                                    </aura:if>

                                </div>
                            </td>

                            <td data-label="File Grand Total">
                                <div class="slds-truncate makeBoldBlue" title="File Grand Total">
                                    <aura:if isTrue="{!v.opptyTotal == null}">
                                        0
                                        <aura:set attribute="else">
                                            <lightning:formattedNumber value="{!v.opptyTotal}" style="decimal" maximumFractionDigits="0" />
                                        </aura:set>
                                    </aura:if>

                                </div>
                            </td>
                            <td data-label="Closed Amount Grand Total">

                                <div class="slds-truncate makeBoldBlue" title="Closed Amount Grand Total">
                                    <aura:if isTrue="{!v.closedAmtTotal == null}">
                                        $0.00
                                        <aura:set attribute="else">
                                            <lightning:formattedNumber value="{!v.closedAmtTotal}" style="currency" maximumFractionDigits="2" />
                                        </aura:set>
                                    </aura:if>
                                </div>
                            </td>
                            <td data-label="Amount Grand Total">
                                <div class="slds-truncate makeBoldBlue" title="Amount Grand Total">
                                    <aura:if isTrue="{!v.amtTotal == null}">
                                        $0.00
                                        <aura:set attribute="else">
                                            <lightning:formattedNumber value="{!v.amtTotal}" style="currency" maximumFractionDigits="2" />
                                        </aura:set>
                                    </aura:if>
                                </div>
                            </td>
                            <td>
                                <div class="slds-truncate makeBoldBlue" title="Amount Grand Total">
                                    <aura:if isTrue="{!v.NoBadDebtTotal == null}">
                                        0
                                        <aura:set attribute="else">
                                            <lightning:formattedNumber value="{!v.NoBadDebtTotal}" style="decimal" maximumFractionDigits="0" />
                                        </aura:set>
                                    </aura:if>
                                </div>
