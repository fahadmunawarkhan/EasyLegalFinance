<aura:component implements="flexipage:availableForAllPageTypes,force:appHostable,force:lightningQuickAction" access="global" controller="LawyerSalesSummaryComponentCtrl" >
    
    <aura:handler name="init" value="{!this}" action="{!c.doInit}" />
    <aura:attribute name="calendarMin" type="date" />
    <aura:attribute name="calendarMax" type="date" />
    <aura:attribute name="startDate" type="date" />
    <aura:attribute name="endDate" type="date" />
    <aura:attribute name="RhinoamtTotal" type="decimal" />
    <aura:attribute name="RhinofileTotal" type="integer" />
    <aura:attribute name="RhinoClosedFileTotal" type="integer" />
    <aura:attribute name="RhinoOpptyTotal" type="integer" />
    <aura:attribute name="RhinoClosedAmtTotal" type="decimal" />
    
    <aura:attribute name="RhinoBadDebtTotal" type="integer" default="0"/>
    <aura:attribute name="RhinoBadDebtAmtTotal" type="decimal" default="0.0"/>
    <aura:attribute name="RhinoShortfallTotal" type="integer" default="0"/>
    <aura:attribute name="RhinoShortfallAmtTotal" type="decimal" default="0.0"/>
    <aura:attribute name="RhinoOverageTotal" type="integer" default="0"/>
    <aura:attribute name="RhinoOverageAmtTotal" type="decimal" default="0.0"/>
    
    <aura:attribute name="ElfiBadDebtTotal" type="integer" default="0"/>
    <aura:attribute name="ElfiBadDebtAmtTotal" type="decimal" default="0.0"/>
    <aura:attribute name="ElfiShortfallTotal" type="integer" default="0"/>
    <aura:attribute name="ElfiShortfallAmtTotal" type="decimal" default="0.0"/>
    <aura:attribute name="ElfiOverageTotal" type="integer" default="0"/>
    <aura:attribute name="ElfiOverageAmtTotal" type="decimal" default="0.0"/>
    
    <aura:attribute name="ElfiamtTotal" type="decimal" />
    <aura:attribute name="ElfifileTotal" type="integer" />
    <aura:attribute name="ElfiClosedFileTotal" type="integer" />
    <aura:attribute name="ElfiOpptyTotal" type="integer" />
    <aura:attribute name="ElfiClosedAmtTotal" type="decimal" />
    <aura:attribute name="AmountByLawyer" type="AggregateResult[]" />
    <aura:attribute name="spinner" type="Boolean" />
    <aura:attribute name="customSetting" type="Object"/>
    <aura:attribute name="ViewAllUrl" type="String"/>
    <aura:attribute name="PrintAllUrl" type="String"/>
    <aura:attribute name="sortField" type="String" default="Amount"/>
    <aura:attribute name="sortOrder" type="String" default="DESC" />
    <aura:attribute name="showWarning" type="Boolean" default="false" />
    <aura:attribute name="searchByName" type="String" default="" />
    
    <aura:attribute name="ChosenFilter" type="string" default="ELFI" />
    <!-- Business Unit Picklist -->
    <aura:attribute name="businessUnitOptions" type="List" />
    <aura:attribute name="selectedBusinessUnitFilter" type="String" default="{!v.customSetting.BusinessUnit__c}" /> 
    
    <aura:attribute name="typeOfLoanOptions" type="List" />
    <aura:attribute name="selectedTypeOfLoanFilter" type="String" default="{!v.customSetting.Type_of_Loan__c}" />
    
    
    <lightning:card title="Date Range" variant="base">
        <div class="slds-card__body_inner">
            <lightning:layout horizontalAlign="center">
                <lightning:layoutItem size="4">
                    <div class="slds-form-element slds-m-bottom_small slds-m-left_xx-large">
                        <div class="slds-form-element__control">
                            <span class="slds-form-element__static">
                                <div class="slds-media__body slds-m-left_xx-large slds-m-bottom_medium">
                                    <lightning:input label="Start Date" type="date" value="{!v.startDate}" 
                                                     min="{! v.calendarMin}" max="{! v.calendarMax}" />
                                </div>
                            </span>
                        </div>
                    </div>
                </lightning:layoutItem>
                <lightning:layoutItem size="4">
                    <div class="slds-form-element slds-m-bottom_small slds-m-left_xx-large">
                        <div class="slds-form-element__control">
                            <span class="slds-form-element__static">
                                <div class="slds-media__body slds-m-left_xx-large slds-m-bottom_medium">
                                    <lightning:input label="End Date" type="date" value="{!v.endDate}" 
                                                     min="{! v.calendarMin}" max="{! v.calendarMax}" />
                                </div>
                            </span>
                        </div>
                    </div>
                </lightning:layoutItem>
                <lightning:layoutItem size="2">
                    <div class="slds-form-element slds-m-bottom_small slds-m-left_xx-large slds-m-top_large">
                        <div class="slds-form-element__control">
                            <span class="slds-form-element__static">
                                <div class="slds-media__body slds-m-left_xx-large slds-m-bottom_medium">
                                    <!-- <lightning:button class="slds-theme_neutral" iconPosition="left" 
                                                      variant="neutral" type="button" label="Filter" onclick="{!c.filterButton}" /> -->                   
                                </div>                                                    
                            </span>
                        </div>
                    </div>
                </lightning:layoutItem> 
            </lightning:layout>
        </div>
    </lightning:card>
    <lightning:card title="Filter" variant="base">
        <div class="slds-card__body_inner">
            <lightning:layout horizontalAlign="center">
                <lightning:layoutItem size="4">
                    <div class="slds-form-element slds-m-bottom_small">
                        <div class="slds-form-element__control">
                            <span class="slds-form-element__static">
                                <div class="slds-media__body slds-m-left_xx-large slds-m-bottom_medium">                                                
                                    <lightning:input label="Search" value="{!v.searchByName}"  placeholder="Search by law firm or lawyer name..."/>
                                </div>
                            </span>
                        </div>
                    </div>
                </lightning:layoutItem>
                
                <lightning:layoutItem size="2">
                    <div class="slds-form-element slds-m-bottom_small">
                        <div class="slds-form-element__control">
                            <span class="slds-form-element__static">
                                <div class="slds-media__body slds-m-left_xx-large slds-m-bottom_medium">                                                
                                    <lightning:combobox aura:id="businessUnitFilter" label="Business Unit" value="{!v.selectedBusinessUnitFilter}" placeholder="Business Unit" options="{! v.businessUnitOptions }"/>
                                </div>
                            </span>
                        </div>
                    </div>
                </lightning:layoutItem>
                <lightning:layoutItem size="2">
                    <div class="slds-form-element slds-m-bottom_small">
                        <div class="slds-form-element__control">
                            <span class="slds-form-element__static">
                                <div class="slds-media__body slds-m-left_xx-large slds-m-bottom_medium">                                                
                                    <lightning:combobox aura:id="typeofLoan" label="Type of Loan" value="{!v.selectedTypeOfLoanFilter}" placeholder="Type of Loan" options="{! v.typeOfLoanOptions }"/>
                                </div>
                            </span>
                        </div>
                    </div>
                </lightning:layoutItem>
                <lightning:layoutItem size="2">
                    <div class="slds-form-element slds-m-bottom_small slds-m-left_xx-large slds-m-top_large">
                        <div class="slds-form-element__control">
                            <span class="slds-form-element__static">
                                <div class="slds-media__body slds-m-left_xx-large slds-m-bottom_medium">
                                    <lightning:button class="slds-theme_neutral" iconPosition="left" 
                                                      variant="neutral" type="button" label="Search" onclick="{!c.searchButton}" />                    
                                </div>                                                    
                            </span>
                        </div>
                    </div>
                </lightning:layoutItem>                            
            </lightning:layout>
        </div>
    </lightning:card>
    <lightning:card>
        <lightning:layout horizontalAlign="center" >
            <lightning:layoutItem >
                <lightning:button class="slds-theme_neutral" iconPosition="left" onclick="{!c.viewAllReportButton}"
                                  variant="neutral" type="button" label="View All (Excel)" />
            </lightning:layoutItem>
            <lightning:layoutItem >
                <lightning:button class="slds-theme_neutral" iconPosition="left" onclick="{!c.viewAllPDFReportButton}"
                                  variant="neutral" type="button" label="View All (PDF)" />
            </lightning:layoutItem>
            <lightning:layoutItem >
                <lightning:button class="slds-theme_neutral" iconPosition="left" onclick="{!c.printPDFReportButton}"
                                  variant="neutral" type="button" label="Print Report (PDF)" />
                <!--<a href="{!v.PrintAllUrl+'%26'+'DefaultPDF=1'}" target="_BLANK">
                    <lightning:button class="slds-theme_neutral" iconPosition="left" 
                                      variant="neutral" type="button" label="Print Report (PDF)" />
                </a>-->
            </lightning:layoutItem>
        </lightning:layout>
    </lightning:card>
    <lightning:card class="slds-card slds-card_boundary">
        <div class="slds-grid slds-gutters">
            <div class="slds-col slds-size_9-of-12">
                <span style="font-style:italic;font-size:smaller">
                    <span style="color:red;margin-left:10px;"> Note</span>: 
                    This Table Show Active Files Where Payment Method is "e-Transfer", "Cheque" and "Admin Fee",<br/>
                    <span style="margin-left:39px;">
                        Closed Files Where Opportunity Stage Status is "Closed - Paid" and Reference Notes equals to "Loan Payout" OR "Partial Payment",
                    </span><br/>
                    <span style="margin-left:39px;">
                        Bad Debt Files Where Reference Notes equals to "Bad Debt",
                    </span><br/>
                    <span style="margin-left:39px;">
                        ShortFall Files Where Opportunity Stage is "Closed With Loan", Stage Status "Closed - ShortFall", Payment Method "Payment" and Reference Notes equals to "Payment ShortFall",
                    </span><br/>
                    <span style="margin-left:39px;">
                        Overage Files Where Opportunity Stage is "Closed With Loan", Stage Status "Closed - Surplus", Payment Method "Payment" and Reference Notes equals to "Payment Surplus"
                    </span><br/>
                    <span style="margin-left:39px;">
                        Drawdowns Falling under Selected Date Range and Type of Loan.
                    </span><br/>
                    <!--This Table Shows Only "e-Transfer", "Cheque" and "Admin Fee" Drawdowns Falling under Selected Date Range and Opportunities being "Closed With Loan". <br/>-->
                    <!--<span style="margin-left:40px;"># Of Files are number of Opportunities that a specific Law firm has given in the Selected Date Range.</span>-->
                </span>
                <br />
                <a href="/lightning/r/Report/00O0L000003mqYfUAI/view" target="_BLANK">
                    <lightning:button class="slds-theme_neutral" iconPosition="left" 
                                      variant="brand" type="button" label="Reference Report" />
                </a>
            </div>
        </div>
        <div class="">
            <lightning:card title="Lawyer Sales Summary" iconName="standard:case" variant="base">
                <div style="overflow-x:auto;height:450px;">
                    <table class="slds-table slds-table_bordered slds-table_striped slds-table_col-bordered">
                        <thead>
                            <tr class="slds-line-height_reset">
                                <th onclick="{!c.sort}" class="slds-is-sortable slds-is-resizable slds-is-sorted" data-field="Lawyer" style="cursor: pointer;">
                                    <span class="slds-truncate makeBold slds-m-right_xxx-small" title="Lawyer">LAWYER</span>
                                    <aura:if isTrue="{!and(v.sortOrder=='DESC',v.sortField=='Lawyer')}">
                                        <lightning:icon iconName="utility:arrowdown" size="xx-small"/>
                                    </aura:if>
                                    <aura:if isTrue="{!and(v.sortOrder=='ASC',v.sortField=='Lawyer')}">
                                        <lightning:icon iconName="utility:arrowup" size="xx-small"/>
                                    </aura:if>
                                </th>
                                <th onclick="{!c.sort}" class="slds-is-sortable slds-is-resizable slds-is-sorted" data-field="Firm" style="cursor: pointer;">
                                    <span class="slds-truncate makeBold slds-m-right_xxx-small" title="Law Firm">LAW FIRM</span>
                                    <aura:if isTrue="{!and(v.sortOrder=='DESC',v.sortField=='Firm')}">
                                        <lightning:icon iconName="utility:arrowdown" size="xx-small"/>
                                    </aura:if>
                                    <aura:if isTrue="{!and(v.sortOrder=='ASC',v.sortField=='Firm')}">
                                        <lightning:icon iconName="utility:arrowup" size="xx-small"/>
                                    </aura:if>
                                </th>
                                <aura:if isTrue="{!or(v.ChosenFilter == 'Consolidated', v.ChosenFilter == 'Rhino')}">
                                    <th onclick="" class="slds-is-sortable slds-is-resizable slds-is-sorted" data-field="Files">
                                        <span class="slds-truncate makeBold slds-m-right_xxx-small" title="# OF FILES">{!'# OF FILES' + if(v.ChosenFilter == 'Consolidated',' (Rhino)', '')}</span>
                                    </th>
                                    <th>
                                        <span class="slds-truncate makeBold slds-m-right_xxx-small" title="# OF CLOSED FILES">{!'# OF CLOSED FILES' + if(v.ChosenFilter == 'Consolidated',' (Rhino)', '')}</span>
                                    </th>
                                    <th onclick="" class="slds-is-sortable slds-is-resizable slds-is-sorted" data-field="opptyCount">
                                        <span class="slds-truncate makeBold slds-m-right_xxx-small" title="# OF OPPS">{!'# OF OPPS' + if(v.ChosenFilter == 'Consolidated',' (Rhino)', '')}</span>
                                    </th>
                                    <th>
                                        <span class="slds-truncate makeBold slds-m-right_xxx-small" title="PAYOUT">{!'PAYOUT' + if(v.ChosenFilter == 'Consolidated',' (Rhino)', '')}</span>
                                    </th>
                                    <th onclick="" class="slds-is-sortable slds-is-resizable slds-is-sorted" data-field="Amount">
                                        <span class="slds-truncate makeBold slds-m-right_xxx-small" title="Amount">{!'AMOUNT' + if(v.ChosenFilter == 'Consolidated',' (Rhino)', '')}</span>
                                    </th>
                                    <th onclick="" class="slds-is-sortable slds-is-resizable slds-is-sorted" data-field="opptyCount">
                                        <span class="slds-truncate makeBold slds-m-right_xxx-small" title="# OF BAD DEBT FILES">{!'# OF BAD DEBT FILES' + if(v.ChosenFilter == 'Consolidated',' (Rhino)', '')}</span>
                                    </th>
                                    <th onclick="" class="slds-is-sortable slds-is-resizable slds-is-sorted" data-field="Amount">
                                        <span class="slds-truncate makeBold slds-m-right_xxx-small" title="BAD DEBT AMOUNT">{!'BAD DEBT AMOUNT' + if(v.ChosenFilter == 'Consolidated',' (Rhino)', '')}</span>
                                    </th>
                                    <th onclick="" class="slds-is-sortable slds-is-resizable slds-is-sorted" data-field="opptyCount">
                                        <span class="slds-truncate makeBold slds-m-right_xxx-small" title="# OF SHORTFALL FILES">{!'# OF SHORTFALL FILES' + if(v.ChosenFilter == 'Consolidated',' (Rhino)', '')}</span>
                                    </th>
                                    <th onclick="" class="slds-is-sortable slds-is-resizable slds-is-sorted" data-field="Amount">
                                        <span class="slds-truncate makeBold slds-m-right_xxx-small" title="SHORTFALL AMOUNT">{!'SHORTFALL AMOUNT' + if(v.ChosenFilter == 'Consolidated',' (Rhino)', '')}</span>
                                    </th>
                                    <th onclick="" class="slds-is-sortable slds-is-resizable slds-is-sorted" data-field="opptyCount">
                                        <span class="slds-truncate makeBold slds-m-right_xxx-small" title="# OF OVERAGE FILES">{!'# OF OVERAGE FILES' + if(v.ChosenFilter == 'Consolidated',' (Rhino)', '')}</span>
                                    </th>
                                    <th onclick="" class="slds-is-sortable slds-is-resizable slds-is-sorted" data-field="Amount">
                                        <span class="slds-truncate makeBold slds-m-right_xxx-small" title="OVERAGE AMOUNT">{!'OVERAGE AMOUNT' + if(v.ChosenFilter == 'Consolidated',' (Rhino)', '')}</span>
                                    </th>
                                </aura:if>
                                <aura:if isTrue="{!or(v.ChosenFilter == 'Consolidated', v.ChosenFilter == 'ELFI')}">
                                    <th onclick="" class="slds-is-sortable slds-is-resizable slds-is-sorted" data-field="Files">
                                        <span class="slds-truncate makeBold slds-m-right_xxx-small" title="# OF FILES">{!'# OF FILES' + if(v.ChosenFilter == 'Consolidated',' (ELFI)', '')}</span>
                                    </th>
                                    <th>
                                        <span class="slds-truncate makeBold slds-m-right_xxx-small" title="# OF CLOSED FILES">{!'# OF CLOSED FILES' + if(v.ChosenFilter == 'Consolidated',' (ELFI)', '')}</span>
                                    </th>
                                    <th onclick="" class="slds-is-sortable slds-is-resizable slds-is-sorted" data-field="opptyCount">
                                        <span class="slds-truncate makeBold slds-m-right_xxx-small" title="# OF OPPS">{!'# OF OPPS' + if(v.ChosenFilter == 'Consolidated',' (ELFI)', '')}</span>
                                    </th>
                                    <th>
                                        <span class="slds-truncate makeBold slds-m-right_xxx-small" title="PAYOUT">{!'PAYOUT' + if(v.ChosenFilter == 'Consolidated',' (ELFI)', '')}</span>
                                    </th>
                                    <th onclick="" class="slds-is-sortable slds-is-resizable slds-is-sorted" data-field="Amount">
                                        <span class="slds-truncate makeBold slds-m-right_xxx-small" title="Amount">{!'AMOUNT' + if(v.ChosenFilter == 'Consolidated',' (ELFI)', '')}</span>
                                    </th>
                                    <th onclick="" class="slds-is-sortable slds-is-resizable slds-is-sorted" data-field="opptyCount">
                                        <span class="slds-truncate makeBold slds-m-right_xxx-small" title="# OF BAD DEBT FILES">{!'# OF BAD DEBT FILES' + if(v.ChosenFilter == 'Consolidated',' (ELFI)', '')}</span>
                                    </th>
                                    <th onclick="" class="slds-is-sortable slds-is-resizable slds-is-sorted" data-field="Amount">
                                        <span class="slds-truncate makeBold slds-m-right_xxx-small" title="BAD DEBT AMOUNT">{!'BAD DEBT AMOUNT' + if(v.ChosenFilter == 'Consolidated',' (ELFI)', '')}</span>
                                    </th>
                                    <th onclick="" class="slds-is-sortable slds-is-resizable slds-is-sorted" data-field="opptyCount">
                                        <span class="slds-truncate makeBold slds-m-right_xxx-small" title="# OF SHORTFALL FILES">{!'# OF SHORTFALL FILES' + if(v.ChosenFilter == 'Consolidated',' (ELFI)', '')}</span>
                                    </th>
                                    <th onclick="" class="slds-is-sortable slds-is-resizable slds-is-sorted" data-field="Amount">
                                        <span class="slds-truncate makeBold slds-m-right_xxx-small" title="SHORTFALL AMOUNT">{!'SHORTFALL AMOUNT' + if(v.ChosenFilter == 'Consolidated',' (ELFI)', '')}</span>
                                    </th>
                                    <th onclick="" class="slds-is-sortable slds-is-resizable slds-is-sorted" data-field="opptyCount">
                                        <span class="slds-truncate makeBold slds-m-right_xxx-small" title="# OF OVERAGE FILES">{!'# OF OVERAGE FILES' + if(v.ChosenFilter == 'Consolidated',' (ELFI)', '')}</span>
                                    </th>
                                    <th onclick="" class="slds-is-sortable slds-is-resizable slds-is-sorted" data-field="Amount">
                                        <span class="slds-truncate makeBold slds-m-right_xxx-small" title="OVERAGE AMOUNT">{!'OVERAGE AMOUNT' + if(v.ChosenFilter == 'Consolidated',' (ELFI)', '')}</span>
                                    </th>
                                </aura:if>
                            </tr>
                        </thead>
                        <tbody>
                            <aura:iteration items="{!v.AmountByLawyer}" var="item">
                                <tr class="slds-hint-parent">
                                    <td class="">
                                        <div class="slds-truncate makeBold">
                                            <aura:if isTrue="{!item.lawyer == null}">
                                                <aura:set attribute="else">
                                                    <a href="{! '/' + item.lawyerId}">{!item.lawyer}</a>
                                                </aura:set>
                                            </aura:if>                                    
                                        </div>
                                    </td>
                                    <td class="">
                                        <div class="slds-truncate makeBold">
                                            <aura:if isTrue="{!item.firm == null}">
                                                <aura:set attribute="else">
                                                    <a href="{! '/' + item.firmId}">{!item.firm}</a>
                                                </aura:set>
                                            </aura:if>                                    
                                        </div>
                                    </td>
                                    <aura:if isTrue="{!or(v.ChosenFilter == 'Consolidated', v.ChosenFilter == 'Rhino')}">
                                        <td class="">
                                            <div class="slds-truncate">                                            
                                                <lightning:formattedNumber 
                                                                           value="{!item.rhinoFileCount}" style="decimal" 
                                                                           maximumFractionDigits="0"/>                                            
                                            </div>
                                        </td>
                                        <td class="">
                                            <div class="slds-truncate">                                            
                                                <lightning:formattedNumber 
                                                                           value="{!item.rhinoClosedFileCount}" style="decimal" 
                                                                           maximumFractionDigits="0"/>                                            
                                            </div>
                                        </td>
                                        <td class="">
                                            <div class="slds-truncate">                                            
                                                <lightning:formattedNumber 
                                                                           value="{!item.rhinoOpptyCount}" style="decimal" 
                                                                           maximumFractionDigits="0"/>                                            
                                            </div>
                                        </td>
                                        <td class="">
                                            <div class="slds-truncate">                                            
                                                <lightning:formattedNumber 
                                                                           value="{!item.rhinoClosedAmount}" style="currency" 
                                                                           maximumFractionDigits="2"/>
                                            </div>
                                        </td>
                                        <td class="">
                                            <div class="slds-truncate">                                            
                                                <lightning:formattedNumber 
                                                                           value="{!item.rhinoAmount}" style="currency" 
                                                                           maximumFractionDigits="2"/>
                                            </div>
                                        </td>
                                        <td class="">
                                            <div class="slds-truncate">                                            
                                                <lightning:formattedNumber 
                                                                           value="{!item.rhinoBadDebtFileCount}" style="decimal" 
                                                                           maximumFractionDigits="0"/>
                                            </div>
                                        </td>
                                        <td class="">
                                            <div class="slds-truncate">                                            
                                                <lightning:formattedNumber 
                                                                           value="{!item.rhinoBadDebtAmount}" style="currency" 
                                                                           maximumFractionDigits="2"/>
                                            </div>
                                        </td>
                                        <td class="">
                                            <div class="slds-truncate">                                            
                                                <lightning:formattedNumber 
                                                                           value="{!item.rhinoShortfallFileCount}" style="decimal" 
                                                                           maximumFractionDigits="0"/>                                            
                                            </div>
                                        </td>
                                        <td class="">
                                            <div class="slds-truncate">                                            
                                                <lightning:formattedNumber 
                                                                           value="{!item.rhinoShortfallAmount}" style="currency" 
                                                                           maximumFractionDigits="2"/>
                                            </div>
                                        </td>
                                        <td class="">
                                            <div class="slds-truncate">                                            
                                                <lightning:formattedNumber 
                                                                           value="{!item.rhinoOverageFileCount}" style="decimal" 
                                                                           maximumFractionDigits="0"/>                                            
                                            </div>
                                        </td>
                                        <td class="">
                                            <div class="slds-truncate">                                            
                                                <lightning:formattedNumber 
                                                                           value="{!item.rhinoOverageAmount}" style="currency" 
                                                                           maximumFractionDigits="2"/>
                                            </div>
                                        </td>
                                    </aura:if>   
                                    <aura:if isTrue="{!or(v.ChosenFilter == 'Consolidated', v.ChosenFilter == 'ELFI')}">
                                        <td class="">
                                            <div class="slds-truncate">                                            
                                                <lightning:formattedNumber 
                                                                           value="{!item.elfiFileCount}" style="decimal" 
                                                                           maximumFractionDigits="0"/>                                            
                                            </div>
                                        </td>
                                        <td class="">
                                            <div class="slds-truncate">                                            
                                                <lightning:formattedNumber 
                                                                           value="{!item.elfiClosedFileCount}" style="decimal" 
                                                                           maximumFractionDigits="0"/>                                            
                                            </div>
                                        </td>
                                        <td class="">
                                            <div class="slds-truncate">                                            
                                                <lightning:formattedNumber 
                                                                           value="{!item.elfiOpptyCount}" style="decimal" 
                                                                           maximumFractionDigits="0"/>                                            
                                            </div>
                                        </td>
                                        <td class="">
                                            <div class="slds-truncate">                                            
